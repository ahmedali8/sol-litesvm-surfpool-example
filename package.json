    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^24.7.2",
    "anchor-bankrun": "^0.5.0",
    "anchor-litesvm": "^0.2.1",
    "chai": "^4.3.4",
    "litesvm": "^0.3.3",
    "mocha": "^9.0.3",
    "prettier": "^3.6.2",
